# ====================================
# CONFIGURACIÓN DE EJEMPLO PARA SERVIDOR
# ====================================
# Copia este archivo como .env.server y configura tus valores reales
# NO incluyas credenciales reales en este archivo

# ====================================
# BASE DE DATOS
# ====================================
DB_HOST=tu_servidor_mysql
DB_PORT=3306
DB_NAME=nombre_de_tu_base_de_datos
DB_USER=tu_usuario_mysql
DB_PASSWORD=tu_password_super_seguro

# ====================================
# DJANGO
# ====================================
DJANGO_SECRET_KEY=cambia-esta-clave-por-una-super-segura-de-50-caracteres-minimo
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com,ip-del-servidor

# ====================================
# EMAIL (para envío de códigos de verificación)
# ====================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-password-de-aplicacion-gmail

# ====================================
# REDIS (generalmente no necesitas cambiar estos)
# ====================================
REDIS_HOST=redis
REDIS_PORT=6379

# ====================================
# SERVIDOR
# ====================================
SERVER_PORT=30000
WORKERS=4

# ====================================
# SEGURIDAD SSL (para producción con HTTPS)
# ====================================
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ====================================
# CONFIGURACIONES ADICIONALES
# ====================================
# Número máximo de conexiones simultáneas
MAX_CONNECTIONS=100

# Tiempo de timeout para requests (en segundos)
REQUEST_TIMEOUT=30

# Configuración de logs
LOG_LEVEL=INFO
